require("co.php");

if (isset($_POST['valider'])) {
    if (isset($_POST['nomb'])) {
        $nomb = $_POST['nomb'];

        // Requ√™te pour v√©rifier si le domaine existe dans la table benevolats
        $sql = "SELECT * FROM benevolats WHERE nomb = '$nomb'";
        $resultat = mysqli_query($connexion, $sql);

        if (!$resultat) {
            die("Erreur de requ√™te : " . mysqli_error($connexion));
        }

        if (mysqli_num_rows($resultat) > 0) {
            echo "Bienvenue dans le domaine : " . $nomb;
        } else {
            echo "Le domaine n'existe pas dans la table benevolats.";
        }
    } else {
        echo "Le champ du domaine n'a pas √©t√© saisi.";
    }

    $pseudo = isset($_POST['pseudo']) ? $_POST['pseudo'] : '';

    if (!empty($pseudo)) {
        // Requ√™te pour v√©rifier si le pseudo existe dans la table inscription
        $sql = "SELECT * FROM inscription WHERE pseudo = '$pseudo'";
        $resultat = mysqli_query($connexion, $sql);

        if (!$resultat) {
            die("Erreur de requ√™te : " . mysqli_error($connexion));
        }

        if (mysqli_num_rows($resultat) > 0) {
            echo "  " . $pseudo;
        } else {
            echo "Vous n'existez pas dans notre Base";
        }
    } else {
        echo "Votre pseudo est vide.";
    }
}

mysqli_close($connexion);
